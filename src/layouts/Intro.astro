---
import Nav from "../layouts/Nav.astro";
---

<div class="intro-container">
    <Nav />
    <div class="intro">
        <div class="intro-paragraph">
            My name is Zafar Peeran, I'm a <i>digital artist</i> working and living
            in Los Angeles.
        </div>
        <div class="intro-aside">
            <div class="aside">
                I want to help brands create memorable experiences through
                expressive design.
            </div>
            <div>
                <a href="http://" target="_blank" rel="noopener noreferrer"
                    >LinkedIn</a
                >
                <a
                    href="http://"
                    target="_blank"
                    rel="noopener noreferrer"
                    class="mail-link">Mail</a
                >
            </div>
        </div>
    </div>
</div>

<style>
    .intro-container {
        background: radial-gradient(
                circle,
                rgba(58, 116, 180, 0.6727065826330532) 0%,
                rgba(209, 29, 253, 0.13489145658263302) 25%,
                rgba(255, 255, 255, 1) 50%
            ),
            radial-gradient(
                61.98% 61.98% at 100% 0%,
                rgba(32, 30, 147, 0.65) 0%,
                rgba(32, 30, 147, 0.2405) 49.77%,
                rgba(2, 209, 255, 0) 100%
            ),
            radial-gradient(
                50% 68.23% at 98.21% 96.61%,
                rgba(65, 209, 201, 0.73) 0%,
                rgba(65, 209, 183, 0.3358) 57.82%,
                rgba(65, 209, 183, 0) 100%
            ),
            radial-gradient(
                72.32% 89.58% at 1.34% 3.39%,
                #f74e76 0%,
                rgba(242, 87, 87, 0) 100%
            ),
            linear-gradient(180deg, #58ccdc 0%, rgba(88, 204, 220, 0) 100%);
        background-repeat: no-repeat;
    }

    .intro {
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        font-size: 20px;
        min-height: calc(100vh - 53px);
        box-sizing: content-box;
        margin: 0px 12px;
    }

    .aside {
        margin-bottom: 20px;
    }

    .intro-paragraph {
        font-size: 30px;
        margin-bottom: 20px;
    }

    .intro-aside {
        color: rgb(141 141 141);
        margin-bottom: 20px;
    }

    a {
        color: black;
        text-decoration: none;
    }

    .mail-link {
        padding-left: 15px;
    }

    @media (min-width: 640px) {
        .intro {
            min-height: calc(100vh - 62px);
            flex-direction: row;
            justify-content: space-between;
            align-items: flex-end;
            font-size: 30px;
            margin: 0px 40px;
        }

        .intro-paragraph {
            font-size: 68px;
            max-width: 835px;
        }

        .intro-paragraph,
        .intro-aside {
            height: 235px;
            padding-bottom: 200px;
        }

        .intro-aside {
            max-width: 725px;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .aside {
            padding-top: 15px;
        }
    }
</style>
